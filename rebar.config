%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors]}.
{eunit_opts, [verbose]}.
{xref_checks, [undefined_function_calls]}.
{erl_libs, ["deps"]}.
{dialyzer, [{warnings, [no_return , no_unused, no_match, no_fail_call,
                        no_contracts, no_behaviours, no_undefined_callbacks,
                        unmatched_returns, error_handling, race_conditions]}]}.

{relx, [{release, {rabl, "0.0.1"},
         [rabl]},
        {lib_dirs, ["deps"]},
        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true}]}.
